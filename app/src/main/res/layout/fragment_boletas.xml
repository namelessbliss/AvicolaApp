<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Boletas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Boletas">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tituloBoleta"
            style="@style/textViewOscuro"
            android:text="@string/boletas" />

        <ListView
            android:id="@+id/listViewBoleta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tituloBoleta"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"></ListView>

    </RelativeLayout>

</FrameLayout>